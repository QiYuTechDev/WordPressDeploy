#!/usr/bin/env bash

set -e

if [[ ! -d "wordpress" ]]; then

    # 如果不存在则 下载 WordPress 源代码
    # https://cn.wordpress.org/download/releases/
    if [[ ! -f "wordpress-5.7.2-zh_CN.zip" ]]; then
        wget https://cn.wordpress.org/wordpress-5.7.2-zh_CN.zip
    fi

    # 解压
    unzip wordpress-5.7.2-zh_CN.zip
fi

# 创建 MySQL 数据文件目录
if [[ ! -d "mysql" ]]; then
    mkdir -p mysql
fi
